{% extends 'admin_dashborad/dashboard.html.twig' %}

{% block body %}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid py-4">
        <h3 class="font-weight-bolder">Create New Product</h3>
        
        {% if app.session.flashbag.has('success') %}
            <div class="alert alert-success" role="alert">
                {{ app.session.flashbag.get('success')[0] }}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h6 class="mb-0">Product Form</h6>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.nameproduct, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nameproduct, {'attr': {'class': 'form-control'}}) }}
                                {% if form.nameproduct.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.nameproduct) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.priceproduct, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.priceproduct, {'attr': {'class': 'form-control'}}) }}
                                {% if form.priceproduct.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.priceproduct) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.stock, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                                {% if form.stock.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.stock) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                {% if form.category.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.category) }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Create Product</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
