{% extends 'admin_dashborad/dashboard.html.twig' %}

{% block body %}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <div class="container-fluid py-4">
        <h1 class="mb-4">Product Details</h1>
        <div class="card">
            <div class="card-header pb-0">
                <h6 class="mb-0">Product Information</h6>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> {{ product.id }}</p>
                <p><strong>Name:</strong> {{ product.nameproduct }}</p>
                <p><strong>Price:</strong> {{ product.priceproduct | number_format(2, '.', ',') }} $</p>
                <p><strong>Stock:</strong> {{ product.stock }}</p>
                <p><strong>Category:</strong> {{ product.category }}</p>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_admin_dashborad_tables') }}" class="btn btn-primary">Back to Products</a>
                <a href="{{ path('app_admin_dashborad_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
                <a href="{{ path('app_admin_dashborad_delete', {'id': product.id}) }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</main>
{% endblock %}