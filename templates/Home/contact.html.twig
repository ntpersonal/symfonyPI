{% extends 'base.html.twig' %}

{% block title %}Contact - Soccer{% endblock %}

{% block body %}
<div class="hero overlay" style="background-image: url('{{ asset('images/bg_3.jpg') }}');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9 mx-auto text-center">
                <h1 class="text-white">Réclamation</h1>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre message ici...', 'rows': '10'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary py-3 px-5">Envoyer la réclamation</button>
                    </div>
                {{ form_end(form) }}
            </div>

            <div class="col-lg-4 ml-auto">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <strong class="text-white d-block">Adresse</strong>
                        273 South Riverview Rd. <br> New York, NY 10011
                    </li>
                    <li class="mb-2">
                        <strong class="text-white d-block">Email</strong>
                        <a href="#">support@sportify.tn</a>
                    </li>
                    <li class="mb-2">
                        <strong class="text-white d-block">Téléphone</strong>
                        <a href="#">+216 99 999 999</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
