    {% block body %}
      <div class="container-fluid py-4">
        <!-- User Statistics Cards -->
        <div class="row">
          <!-- Total Users Card -->
          <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Users</p>
                      <h5 class="font-weight-bolder mb-0">{{ totalUsers }}</h5>
                      <p class="mb-0">
                        <span class="text-success text-sm font-weight-bolder">+{{ userGrowthRate }}%</span>
                        this month
                      </p>
                    </div>
                  </div>
                  <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                      <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Active Users Card -->
          <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Active Users</p>
                      <h5 class="font-weight-bolder mb-0">{{ activeUsers }}</h5>
                      <p class="mb-0">
                        <span class="text-success text-sm font-weight-bolder">{{ (activeUsers / totalUsers * 100)|round }}%</span>
                        of total users
                      </p>
                    </div>
                  </div>
                  <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                      <i class="fas fa-user-check text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Players Card -->
          <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Players</p>
                      <h5 class="font-weight-bolder mb-0">{{ playerUsers }}</h5>
                      <p class="mb-0">
                        <span class="text-info text-sm font-weight-bolder">{{ (playerUsers / totalUsers * 100)|round }}%</span>
                        of total users
                      </p>
                    </div>
                  </div>
                  <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle">
                      <i class="fas fa-gamepad text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Organizers Card -->
          <div class="col-xl-3 col-sm-6">
            <div class="card">
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Organizers</p>
                      <h5 class="font-weight-bolder mb-0">{{ organizerUsers }}</h5>
                      <p class="mb-0">
                        <span class="text-warning text-sm font-weight-bolder">{{ (organizerUsers / totalUsers * 100)|round }}%</span>
                        of total users
                      </p>
                    </div>
                  </div>
                  <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                      <i class="fas fa-calendar-check text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- User Distribution Chart -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card z-index-2">
              <div class="card-header pb-0 pt-3 bg-transparent">
                <h6 class="text-capitalize">User Distribution</h6>
              </div>
              <div class="card-body p-3">
                <div class="chart">
                  <canvas id="userDistributionChart" class="chart-canvas" height="300"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Users Table -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card mb-4">
              <div class="card-header pb-0">
                <h6>Recent Users</h6>
              </div>
              <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Role</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rating</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Joined</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for user in recentUsers %}
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="{{ user.profilepicture ? asset('uploads/profile_pictures/' ~ user.profilepicture) : asset('assets/img/default-avatar.png') }}" class="avatar avatar-sm me-3" alt="user avatar">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">{{ user.firstname }} {{ user.lastname }}</h6>
                                <p class="text-xs text-secondary mb-0">{{ user.email }}</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">{{ user.role }}</p>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <span class="badge badge-sm {{ user.isIsActive() ? 'bg-gradient-success' : 'bg-gradient-secondary' }}">
                              {{ user.isIsActive() ? 'Active' : 'Inactive' }}
                            </span>
                          </td>
                          <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">{{ user.rating ?: 'N/A' }}</span>
                          </td>
                          <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">{{ user.createdat|date('Y-m-d') }}</span>
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endblock %}

