{% extends 'admin_dashboard/dashboard.html.twig' %}

{% block title %}{{ tournoi.nom }} – Matches{% endblock %}

{% block body %}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
  <div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h6 class="mb-0">Matches for “{{ tournoi.nom }}”</h6>
      <a class="btn btn-secondary btn-sm" href="{{ path('app_admin_dashborad_Tournoi') }}">← Back to Tournois</a>
    </div>

    <div class="card mb-4">
      <div class="table-responsive p-3">
        <table class="table align-items-center mb-0">
          <thead>
            <tr>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Team A</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Team B</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Score</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Time</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Location</th>
              <th class="text-secondary"></th>
            </tr>
          </thead>
          <tbody>
            {% for match in matches %}
              <tr>
                <td>{{ match.teamA.nom }}</td>
                <td>{{ match.teamB.nom }}</td>
                <td>{{ match.scoreTeamA }} – {{ match.scoreTeamB }}</td>
                <td>{{ match.status }}</td>
                <td>{{ match.matchTime|date('Y-m-d H:i') }}</td>
                <td>{{ match.locationMatch }}</td>
                <td class="text-end">
                  <a href="{{ path('app_matches_show', {id: match.id}) }}" class="btn btn-sm btn-primary">Show</a>
                  <a href="{{ path('app_matches_edit', {id: match.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="7" class="text-center py-4">No matches for this tournament.</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
{% endblock %}
