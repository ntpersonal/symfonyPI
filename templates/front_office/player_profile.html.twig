{% extends 'front_office_dashboard/base.html.twig' %}

{% block title %}Player Profile{% endblock %}

{% block content %}
    <!-- Player Profile Header -->
    <div class="breadcrumb-area" style="background-image: url('{{ asset('assets/images/breadcrumb-bg.jpg') }}')">
        <div class="container">
            <div class="breadcrumb-content">
                <h1 class="page-title">Player Profile</h1>
                <ul class="page-list">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li>Profile</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="player-profile-section py-5">
        <div class="container">
            <div class="row">
                <!-- Profile Card -->
                <div class="col-lg-4">
                    <div class="profile-card bg-white rounded-lg shadow overflow-hidden mb-4">
                        <div class="profile-header bg-gradient-primary position-relative">
                            <div class="profile-cover" style="height: 120px; background-color: #e41b23;"></div>
                            <div class="profile-avatar-wrapper">
                                {% if user.profilepicture %}
                                    <img src="{{ asset('uploads/profile/' ~ user.profilepicture) }}"
                                         alt="Profile Picture"
                                         class="profile-avatar"
                                         onerror="this.src='{{ asset('assets/images/default-avatar.png') }}'">
                                {% else %}
                                    <img src="{{ asset('assets/images/default-avatar.png') }}"
                                         alt="Default Profile Picture"
                                         class="profile-avatar">
                                {% endif %}
                            </div>
                        </div>
                        <div class="profile-body text-center px-4 py-4">
                            <h3 class="player-name mb-1">{{ user.firstname }} {{ user.lastname }}</h3>
                            <span class="player-role d-block text-muted mb-3">{{ user.role }}</span>

                            <div class="profile-actions">
                                <a href="{{ path('app_player_profile_edit') }}" class="btn-edit-profile">
                                    <i class="fas fa-edit me-2"></i> Edit Profile
                                </a>
                            </div>

                            <div class="player-stats mt-4">
                                <div class="row g-0">
                                    <div class="col-4 stat-item">
                                        <div class="stat-value">{{ user.isActive ? 'Active' : 'Inactive' }}</div>
                                        <div class="stat-label">Status</div>
                                    </div>
                                    <div class="col-4 stat-item border-start border-end">
                                        <div class="stat-value">{{ user.createdat|date('Y') }}</div>
                                        <div class="stat-label">Joined</div>
                                    </div>
                                    <div class="col-4 stat-item">
                                        <div class="stat-value"><i class="fas fa-shield-alt"></i></div>
                                        <div class="stat-label">Team</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Social Connections -->
                    <div class="social-card bg-white rounded-lg shadow overflow-hidden">
                        <div class="card-header border-bottom p-3">
                            <h5 class="mb-0"><i class="fas fa-link me-2"></i> Connect</h5>
                        </div>
                        <div class="card-body p-3">
                            <div class="social-buttons">
                                <a href="#" class="social-btn facebook"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="social-btn instagram"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="social-btn youtube"><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Information -->
                <div class="col-lg-8">
                    <div class="profile-info-card bg-white rounded-lg shadow mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center p-4 border-bottom">
                            <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i> Personal Information</h4>
                            <div class="header-actions">
                                <span class="badge member-since">Member since {{ user.createdat|date('F Y') }}</span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div class="info-content">
                                        <span class="info-label">Email Address</span>
                                        <span class="info-value">{{ user.email }}</span>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-phone-alt"></i>
                                    </div>
                                    <div class="info-content">
                                        <span class="info-label">Phone Number</span>
                                        <span class="info-value">{{ user.phonenumber }}</span>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="info-content">
                                        <span class="info-label">Date of Birth</span>
                                        <span class="info-value">{{ user.dateofbirth|date('F d, Y') }}</span>
                                    </div>
                                </div>

                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-user-tag"></i>
                                    </div>
                                    <div class="info-content">
                                        <span class="info-label">Role</span>
                                        <span class="info-value">{{ user.role }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Performance Stats -->
                    <div class="performance-card bg-white rounded-lg shadow mb-4">
                        <div class="card-header p-4 border-bottom">
                            <h4 class="mb-0"><i class="fas fa-chart-line me-2"></i> Performance Stats</h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="performance-stats">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="stat-progress-item">
                                            <div class="stat-header d-flex justify-content-between mb-2">
                                                <span class="stat-name">Overall Rating</span>
                                                <span class="stat-percentage">85%</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="stat-progress-item">
                                            <div class="stat-header d-flex justify-content-between mb-2">
                                                <span class="stat-name">Attendance</span>
                                                <span class="stat-percentage">92%</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: 92%; background-color: #e41b23;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="stat-progress-item">
                                            <div class="stat-header d-flex justify-content-between mb-2">
                                                <span class="stat-name">Fitness</span>
                                                <span class="stat-percentage">78%</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-info" role="progressbar" style="width: 78%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="stat-progress-item">
                                            <div class="stat-header d-flex justify-content-between mb-2">
                                                <span class="stat-name">Teamwork</span>
                                                <span class="stat-percentage">88%</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: 88%" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upcoming Events -->
                    <div class="events-card bg-white rounded-lg shadow">
                        <div class="card-header p-4 border-bottom">
                            <h4 class="mb-0"><i class="fas fa-calendar me-2"></i> Upcoming Events</h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="event-list">
                                <div class="event-item d-flex p-4 border-bottom">
                                    <div class="event-date text-center me-4">
                                        <div class="date-box">
                                            <span class="month">Apr</span>
                                            <span class="day">25</span>
                                        </div>
                                    </div>
                                    <div class="event-details">
                                        <h5 class="event-title">Team Practice</h5>
                                        <p class="event-info mb-2"><i class="far fa-clock me-2"></i> 3:00 PM - 5:30 PM</p>
                                        <p class="event-location mb-0"><i class="fas fa-map-marker-alt me-2"></i> Main Training Ground</p>
                                    </div>
                                </div>
                                <div class="event-item d-flex p-4 border-bottom">
                                    <div class="event-date text-center me-4">
                                        <div class="date-box">
                                            <span class="month">Apr</span>
                                            <span class="day">28</span>
                                        </div>
                                    </div>
                                    <div class="event-details">
                                        <h5 class="event-title">League Match</h5>
                                        <p class="event-info mb-2"><i class="far fa-clock me-2"></i> 7:00 PM - 9:00 PM</p>
                                        <p class="event-location mb-0"><i class="fas fa-map-marker-alt me-2"></i> City Stadium</p>
                                    </div>
                                </div>
                                <div class="event-item d-flex p-4">
                                    <div class="event-date text-center me-4">
                                        <div class="date-box">
                                            <span class="month">May</span>
                                            <span class="day">02</span>
                                        </div>
                                    </div>
                                    <div class="event-details">
                                        <h5 class="event-title">Team Meeting</h5>
                                        <p class="event-info mb-2"><i class="far fa-clock me-2"></i> 10:00 AM - 11:30 AM</p>
                                        <p class="event-location mb-0"><i class="fas fa-map-marker-alt me-2"></i> Club House</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Player Profile Section Styles */
        .player-profile-section {
            background-color: #f5f7fa;
            padding-top: 60px;
            padding-bottom: 80px;
        }

        /* Profile Card Styles */
        .profile-card {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.07);
            transition: transform 0.3s ease;
        }

        .profile-header {
            position: relative;
        }

        .profile-avatar-wrapper {
            position: relative;
            display: flex;
            justify-content: center;
            margin-top: -75px;
        }

        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid #ffffff;
            object-fit: cover;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .player-name {
            font-size: 1.75rem;
            font-weight: 700;
            margin-top: 10px;
            color: #333;
        }

        .player-role {
            font-size: 1rem;
            color: #777;
            font-weight: 500;
        }

        .btn-edit-profile {
            display: inline-block;
            padding: 10px 24px;
            background-color: #e41b23;
            color: white;
            border-radius: 30px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            margin-top: 15px;
            border: none;
        }

        .btn-edit-profile:hover {
            background-color: #c01018;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(228, 27, 35, 0.3);
        }

        .player-stats {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .stat-item {
            padding: 10px 15px;
        }

        .stat-value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #333;
        }

        .stat-label {
            font-size: 0.85rem;
            color: #777;
            margin-top: 5px;
        }

        /* Social Card Styles */
        .social-card {
            margin-top: 20px;
        }

        .social-buttons {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
        }

        .social-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .social-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .facebook {
            background-color: #3b5998;
        }

        .twitter {
            background-color: #1da1f2;
        }

        .instagram {
            background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
        }

        .youtube {
            background-color: #ff0000;
        }

        /* Profile Info Card Styles */
        .profile-info-card,
        .performance-card,
        .events-card {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.07);
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #eee;
        }

        .member-since {
            background-color: #f8f9fa;
            color: #6c757d;
            font-weight: 500;
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .info-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: 10px;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .info-icon {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: rgba(228, 27, 35, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #e41b23;
            font-size: 1.2rem;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            display: block;
            font-size: 0.8rem;
            color: #777;
            margin-bottom: 5px;
        }

        .info-value {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
        }

        /* Performance Stats Styles */
        .performance-stats {
            padding: 10px;
        }

        .stat-progress-item {
            margin-bottom: 20px;
        }

        .stat-name {
            font-weight: 500;
            color: #333;
        }

        .stat-percentage {
            font-weight: 700;
            color: #e41b23;
        }

        .progress {
            height: 8px;
            border-radius: 4px;
            background-color: #eee;
            overflow: hidden;
        }

        .progress-bar {
            border-radius: 4px;
            transition: width 0.7s ease;
        }

        /* Event Card Styles */
        .event-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .event-item {
            transition: background-color 0.3s ease;
        }

        .event-item:hover {
            background-color: #f8f9fa;
        }

        .date-box {
            width: 60px;
            border-radius: 8px;
            overflow: hidden;
            border: 1px solid #eee;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        .month {
            display: block;
            background-color: #e41b23;
            color: white;
            padding: 3px 0;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .day {
            display: block;
            font-size: 1.5rem;
            font-weight: 700;
            padding: 5px 0;
            background-color: white;
        }

        .event-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .event-info, .event-location {
            font-size: 0.9rem;
            color: #777;
        }

        /* Responsive Adjustments */
        @media (max-width: 991px) {
            .profile-avatar {
                width: 130px;
                height: 130px;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 767px) {
            .player-profile-section {
                padding-top: 40px;
                padding-bottom: 60px;
            }

            .profile-avatar-wrapper {
                margin-top: -60px;
            }

            .profile-avatar {
                width: 120px;
                height: 120px;
            }

            .player-name {
                font-size: 1.5rem;
            }

            .social-buttons {
                flex-wrap: wrap;
                justify-content: center;
                gap: 15px;
            }

            .event-item {
                flex-direction: column;
            }

            .event-date {
                margin-bottom: 15px;
                margin-right: 0;
            }

            .date-box {
                margin: 0 auto;
            }
        }

        /* Breadcrumb Styles */
        .breadcrumb-area {
            padding: 80px 0;
            background-size: cover;
            background-position: center;
            position: relative;
            z-index: 1;
        }

        .breadcrumb-area::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }

        .breadcrumb-content {
            text-align: center;
            color: white;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .page-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .page-list li {
            position: relative;
            padding-right: 15px;
        }

        .page-list li:not(:last-child)::after {
            content: '/';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
        }

        .page-list li a {
            color: #e41b23;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .page-list li a:hover {
            color: white;
        }
    </style>
{% endblock %}