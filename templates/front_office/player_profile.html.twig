{% extends 'front_office_dashboard/base.html.twig' %}

{% block title %}Player Profile{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card profile-card">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0">Profile Information</h6>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="{{ path('app_player_profile_edit') }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="profile-picture-container">
                                {% if user.profilepicture %}
                                    <img src="{{ asset('uploads/profile/' ~ user.profilepicture) }}"
                                         alt="Profile Picture"
                                         class="profile-picture"
                                         onerror="this.src='{{ asset('assets/images/default-avatar.png') }}'">
                                {% else %}
                                    <img src="{{ asset('assets/images/default-avatar.png') }}"
                                         alt="Default Profile Picture"
                                         class="profile-picture">
                                {% endif %}
                            </div>
                            <div class="text-center mt-4">
                                <h5 class="mb-1">{{ user.firstname }} {{ user.lastname }}</h5>
                                <p class="text-muted mb-0">{{ user.role }}</p>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="profile-info">
                                <div class="info-section">
                                    <h6>Personal Information</h6>
                                    <div class="info-item">
                                        <span class="info-label">Email:</span>
                                        <span class="info-value">{{ user.email }}</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Phone Number:</span>
                                        <span class="info-value">{{ user.phonenumber }}</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Date of Birth:</span>
                                        <span class="info-value">{{ user.dateofbirth|date('Y-m-d') }}</span>
                                    </div>
                                </div>
                                <div class="info-section">
                                    <h6>Account Information</h6>
                                    <div class="info-item">
                                        <span class="info-label">Role:</span>
                                        <span class="info-value">{{ user.role }}</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Status:</span>
                                        <span class="badge bg-{{ user.isActive ? 'success' : 'danger' }}">
                                            {{ user.isActive ? 'Active' : 'Inactive' }}
                                        </span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Member Since:</span>
                                        <span class="info-value">{{ user.createdat|date('F Y') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .profile-card .profile-picture {
        width: 250px !important;
        height: 250px !important;
        border-radius: 50% !important;
        object-fit: cover;
        border: 6px solid #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        display: block;
        margin: 0 auto;
    }

    .profile-card .profile-picture:hover {
        transform: scale(1.02);
    }
    .profile-picture {
        width: 250px ;
        height: 250px ;
        border-radius: 50% ;
        object-fit: cover;
        border: 6px solid #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        display: block;
        margin: 0 auto;
    }



.profile-picture:hover {
    transform: scale(1.02);
}

.info-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
}

.info-section h6 {
    color: #344767;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e9ecef;
    font-weight: 600;
}

.info-item {
    display: flex;
    margin-bottom: 1rem;
    padding: 0.5rem 0;
}

.info-label {
    width: 150px;
    color: #6c757d;
    font-weight: 500;
}

.info-value {
    color: #344767;
    font-weight: 500;
}

.badge {
    padding: 0.5em 1em;
    font-size: 0.85em;
    font-weight: 600;
    border-radius: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.bg-success {
    background-color: #28a745 !important;
}

.bg-danger {
    background-color: #dc3545 !important;
}

@media (max-width: 768px) {
    .profile-picture {
        width: 250px;
        height: 250px;
    }
    
    .info-item {
        flex-direction: column;
    }
    
    .info-label {
        width: 100%;
        margin-bottom: 0.25rem;
    }
}
</style>
{% endblock %} 