{% extends 'front_office_dashboard/base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block content %}
    <!-- Edit Profile Header -->
    <div class="breadcrumb-area" style="background-image: url('{{ asset('assets/images/breadcrumb-bg.jpg') }}')">
        <div class="container">
            <div class="breadcrumb-content">
                <h1 class="page-title">Edit Profile</h1>
                <ul class="page-list">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li><a href="{{ path('app_player_profile') }}">Profile</a></li>
                    <li>Edit</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="edit-profile-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="edit-profile-card bg-white rounded-lg shadow">
                        <div class="card-header p-4 border-bottom">
                            <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i> Update Your Profile</h4>
                        </div>
                        <div class="card-body p-4">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                        {{ message }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'edit-profile-form'}}) }}
                            <div class="row">
                                <!-- Profile Picture Section -->
                                <div class="col-lg-4">
                                    <div class="profile-picture-upload-container text-center mb-4">
                                        <div class="profile-picture-wrapper mb-3">
                                            {% if user.profilepicture %}
                                                <img src="{{ asset('uploads/profile/' ~ user.profilepicture) }}"
                                                     alt="Profile Picture"
                                                     id="profile-picture-preview"
                                                     class="profile-picture-preview"
                                                     onerror="this.src='{{ asset('assets/images/default-avatar.png') }}'">
                                            {% else %}
                                                <img src="{{ asset('assets/images/default-avatar.png') }}"
                                                     alt="Default Profile Picture"
                                                     id="profile-picture-preview"
                                                     class="profile-picture-preview">
                                            {% endif %}
                                        </div>
                                        <div class="upload-btn-wrapper">
                                            {{ form_row(form.profilepicture) }}
                                            <small class="form-text text-muted mt-2">Recommended: Square image, at least 300Ã—300 pixels</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Profile Form Section -->
                                <div class="col-lg-8">
                                    <div class="form-section mb-4">
                                        <h5 class="section-title"><i class="fas fa-user me-2"></i> Personal Information</h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                {{ form_row(form.firstname) }}
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                {{ form_row(form.lastname) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                {{ form_row(form.email) }}
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                {{ form_row(form.phonenumber) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                {{ form_row(form.dateofbirth) }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-section mb-4">
                                        <h5 class="section-title"><i class="fas fa-lock me-2"></i> Change Password</h5>
                                        <div class="mb-3">
                                            {{ form_row(form.currentPassword) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.newPassword) }}
                                        </div>
                                    </div>

                                    <div class="form-actions text-end">
                                        <a href="{{ path('app_player_profile') }}" class="btn-cancel">
                                            <i class="fas fa-times me-2"></i> Cancel
                                        </a>
                                        <button type="submit" class="btn-save-profile">
                                            <i class="fas fa-save me-2"></i> Save Changes
                                        </button>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .edit-profile-section {
            background-color: #f5f7fa;
            padding-top: 60px;
            padding-bottom: 80px;
        }

        .breadcrumb-area {
            padding: 80px 0;
            background-size: cover;
            background-position: center;
            position: relative;
            z-index: 1;
        }

        .breadcrumb-area::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }

        .breadcrumb-content {
            text-align: center;
            color: white;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .page-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .page-list li {
            position: relative;
            padding-right: 15px;
        }

        .page-list li:not(:last-child)::after {
            content: '/';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
        }

        .page-list li a {
            color: #e41b23;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .page-list li a:hover {
            color: white;
        }

        .edit-profile-card {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.07);
            margin-bottom: 30px;
        }

        .edit-profile-card .card-header {
            background-color: #fff;
            border-bottom: 1px solid #eee;
        }

        .section-title {
            color: #333;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .profile-picture-wrapper {
            position: relative;
            width: 180px;
            height: 180px;
            margin: 0 auto;
        }

        .profile-picture-preview {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #ffffff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .profile-picture-preview:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .form-section {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .form-actions {
            margin-top: 30px;
            display: flex;
            justify-content: flex-end;
            gap: 15px;
        }

        .btn-save-profile {
            padding: 12px 30px;
            background-color: #e41b23;
            color: white;
            border-radius: 30px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-save-profile:hover {
            background-color: #c01018;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(228, 27, 35, 0.3);
        }

        .btn-cancel {
            padding: 12px 30px;
            background-color: #6c757d;
            color: white;
            border-radius: 30px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
        }

        @media (max-width: 991px) {
            .form-actions {
                flex-direction: column;
            }

            .btn-cancel, .btn-save-profile {
                width: 100%;
                text-align: center;
            }
        }

        @media (max-width: 767px) {
            .edit-profile-section {
                padding-top: 40px;
                padding-bottom: 60px;
            }

            .profile-picture-wrapper {
                width: 150px;
                height: 150px;
            }

            .section-title {
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}
