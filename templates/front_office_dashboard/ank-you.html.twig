
{% block title %}Thank You{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .thank-you-container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .thank-you-container:hover {
            transform: translateY(-5px);
        }

        .thank-you-container i {
            color: #28a745;
            animation: scale-in 0.5s ease-out;
        }

        .thank-you-container h1 {
            color: #333;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .thank-you-container .lead {
            color: #555;
            font-size: 1.2rem;
        }

        .thank-you-container .text-muted {
            color: #777 !important;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-2px);
        }

        .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
            transform: translateY(-2px);
        }

        @keyframes scale-in {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @media (max-width: 768px) {
            .thank-you-container {
                margin: 1rem;
                padding: 2rem !important;
            }
            
            .btn {
                display: block;
                width: 100%;
                margin: 0.5rem 0;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="thank-you-container p-5">
                    <i class="fas fa-check-circle mb-4" style="font-size: 4rem;"></i>
                    <h1 class="mb-4">Thank You!</h1>
                    <p class="lead mb-4">Your request has been successfully processed.</p>
                    <p class="text-muted mb-4">We appreciate your patience and will get back to you shortly.</p>
                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary me-3">Return to Home</a>
                        <a href="{{ path('app_front_office_contact') }}" class="btn btn-outline-primary">Contact Support</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

