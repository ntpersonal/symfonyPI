{% extends 'front_office_dashboard/base.html.twig' %}
{% block title %}gallery {% endblock %}
{% block banner %}
<div class="banner banner1">
            <div class="inner-page-banner banner-bg">
                <div class="container">
                    <div class="banner-content">
                        <div class="page-path">
                            <ul>
                                <li><a class="home-page-link" href="{{ path('app_home') }}">Home</a></li>
                                <li><a class="current-page" href="#">Gallery</a></li>
                            </ul>
                        </div>
                        <h1 class="banner-heading">PHOTO GALLERY</h1>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
{% block content %}
<!--================= Gallery Section Start Here =================-->
    <div class="rts-gallery-section section-gap">
        <div class="container">
            <div class="top-wrap">
                <div class="filter-button-group">
                    <button class="filter-btn" data-show=".fifa20">FIFA 2024</button>
                    <button class="filter-btn" data-show=".uefacup">UEFA CUP</button>
                    <button class="filter-btn" data-show=".warmup">WARM-UP</button>
                    <button class="filter-btn" data-show=".national">NATIONAL</button>
                </div>
                <div class="slider-navigation">
                    <button class="slide-prev slide-btn"><i class="far fa-long-arrow-left"></i></button>
                    <button class="slide-next slide-btn"><i class="far fa-long-arrow-right"></i></button>
                </div>
            </div>
            <div class="filterd-items fifa20">
                <div class="swiper oneManual">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="gallery-grid">
                                <div class="row">
                                    {% for i in 1..6 %}
                                    <div class="col-xl-4 col-md-6">
                                        <div class="gallery-item">
                                            <a class="gallery-image image-popup-vertical-fit" href="{{ asset('assets/images/gallery/full' ~ i ~ '.png') }}" title="Football.png">
                                                <img src="{{ asset('assets/images/gallery/' ~ i ~ '.png') }}" alt="gallery-image">
                                                <button class="pop-btn"><i class="fal fa-plus"></i></button>
                                            </a>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Repeat similar structure for other filter categories (uefacup, warmup, national) -->
        </div>
    </div>
    <!--================= Gallery Section End Here =================-->

    <!--================= Blog Section Start Here =================-->
    <div class="rts-blog-section section-gap section-bg">
        <div class="container">
            <div class="section-title-area section-title-area-inner text-center mb--30">
                <h1 class="section-title">TEAM INSIGHTS</h1>
                <p>It is one of the most popular football clubs that offer training programs for the youth, as well as summer camps</p>
            </div>
            <div class="blog-area">
                <div class="row justify-content-center">
                    {% for i in 1..3 %}
                    <div class="col-xl-4 col-md-6">
                        <div class="blog-item">
                            <div class="blog-picture"><img src="{{ asset('assets/images/blog/blog' ~ i ~ '.jpg') }}" alt=""></div>
                            <div class="contents-wrapper">
                                <div class="contents">
                                    <div class="d-block">
                                        <a href="{{ path('app_category_details', {'id': 1}) }}" class="blog-catagory">FOOTBALL</a>
                                        <a href="{{ path('app_blog_front_details', {'id': 1}) }}" class="blog-title">THE WORLD CUP â€“ WHAT TO EXPECT FROM ENGLAND FOOTBALL CLUB</a>
                                    </div>
                                    <div class="author-info">
                                        <div class="author-dp"><img src="{{ asset('assets/images/items/author' ~ i ~ '.png') }}" alt="author-dp"></div>
                                        <div class="content">
                                            <a href="#0" class="author-name">CLUB DA AUTHOR</a>
                                            <div class="blog-date">
                                                <div class="date">June 21, 2024</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!--================= Blog Section End Here =================-->

{% endblock %}
{% block footer %}
{{ parent() }}
{% endblock %}
{% block javascript %}
{{ parent() }}
{% endblock %}
