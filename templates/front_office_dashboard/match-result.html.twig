{% extends 'front_office_dashboard/base.html.twig' %}
{% block title %}Matches Result{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block banner %}
  <div class="banner banner1">
        <div class="inner-page-banner banner-bg">
            <div class="container">
                <div class="banner-content">
                    <div class="page-path">
                        <ul>
                            <li><a class="home-page-link" href="{{ path('app_home') }}">Home</a></li>
                            <li><a class="current-page" href="#">Result</a></li>
                        </ul>
                    </div>
                    <h1 class="banner-heading">MATCH RESULT</h1>
                </div>
            </div>
        </div>
    </div>
  
{% endblock %}
{% block content %}
<!--================= Latest Match Start Here =================-->
    <div class="rts-latest-match">
        <div class="container">
            <div class="latest-match-inner">
                <div class="club-area">
                    <div class="club-logo"><img src="{{ asset('assets/images/items/clubs.png') }}" alt=""></div>
                    <div class="content">
                        {# <h3 class="club-text">{{ match.homeTeam.name }} <BR>
                            {{ match.homeTeam.league }}</h3> #}
                    </div>
                    {# <span class="match-type">{{ match.type }}</span> #}
                </div>
                <div class="match-countdown-area">
                    <div class="countdown">
                        <div class="countdown-el days-c">
                            <span class="value" id="days">0</span>
                        </div>
                        <span class="letter">D</span>
                        <div class="countdown-el hours-c">
                            <span class="value" id="hours">0</span>
                        </div>
                        <span class="letter">H</span>
                        <div class="countdown-el mins-c">
                            <span class="value" id="mins">0</span>
                        </div>
                        <span class="letter">M</span>
                        <div class="countdown-el seconds-c">
                            <span class="value" id="seconds">0</span>
                        </div>
                        <span class="letter">S</span>
                    </div>
                </div>
                <a href="{{ path('app_contact') }}" class="ticket-btn">BUY TICKETS</a>
            </div>
        </div>
    </div>
    <!--================= Latest Match End Here =================-->

    <!--================= Recap Section Start Here =================-->
    <div class="rts-match-recap-section section-gap">
        <div class="container">
            <div class="section-inner">
                <div class="recap-picture"><img src="{{ asset('assets/images/details/recap.jpg') }}" alt="recap-picture"></div>
                <div class="contents">
                    <h1 class="section-title">MATCH RECAP</h1>
                    {# <p class="p1">{{ match.recap.intro }}</p>
                    <p class="p2">{{ match.recap.details }}</p> #}
                    <a href="{{ path('app_match_result') }}" class="more-btn">LEARN MORE</a>
                </div>
            </div>
        </div>
    </div>
    <!--================= Recap Section End Here =================-->

    <!--================= INSIGHTS Section Start Here =================-->
    <div class="rts-match-insights-section section-gap">
        <div class="container">
            <div class="section-title-area section-title-area-inner text-center mb--50">
                <h1 class="section-title">MATCH INSIGHTS</h1>
                {# <p>{{ match.insights.description }}</p> #}
            </div>
            <div class="section-inner">
                <div class="match-video">
                    <div class="video-thumb">
                    {# <img src="{{ asset('assets/images/details/insgt.jpg') }}" alt="video-thumb"> #}
                        <div class="play-btn play-video">
                        {# <a class="popup-video"
                                href="{{ match.insights.videoUrl }}" data-effect="mfp-move-horizontal"><i
                                    class="fas fa-play"></i></a> #}
                        </div>
                    </div>
                </div>
                <div class="table-area table-full">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                        </thead>
                        <tbody>
                            <tr class="head-tr">
                                <th scope="col">DATE</th>
                                <th scope="col">TIME</th>
                                <th scope="col">LEAGUE</th>
                                <th scope="col">SEASON</th>
                                <th scope="col">MATCH DAY</th>
                                <th scope="col">FULL TIME</th>
                            </tr>
                            <tr>
                                {# <td><span class="text">{{ match.date|date('F d, Y') }}</span></td>
                                <td><span class="text">{{ match.time|date('g:i a') }}</span></td>
                                <td><span class="long-text">{{ match.league }}</span></td>
                                <td><span class="numberic">{{ match.season }}</span></td>
                                <td><span class="long-text">{{ match.matchDay }}</span></td>
                                <td><span class="pts-count">{{ match.fullTime }}'</span></td> #}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--================= INSIGHTS Section End Here =================-->

    <!--================= Location Section Start Here =================-->
    <div class="rts-location-section section-gap">
        <div class="container">
            <div class="top-wrap">
                <div class="section-title-area section-title-area-inner text-start mb--50">
                    <h1 class="section-title">LOCATION GROUND</h1>
                    {# <p>{{ match.location.description }}</p> #}
                </div>
                {# <a class="direction-btn btn" target="_blank" href="{{ match.location.directionsUrl }}">
                    GET DIRECTION <i class="far fa-long-arrow-right ml--5"></i>
                </a> #}
            </div>
            <div class="google-map-area">
                <div class="map">
                    {# <p><iframe src="{{ match.location.mapUrl }}" height="500" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe></p> #}
                </div>
            </div>
        </div>
    </div>
    <!--================= Location Section End Here =================-->

    <!--================= Result Section Start Here =================-->
    <div class="rts-match-results-section section-gap section-bg">
        <div class="container">
            <div class="section-title-area section-title-area-inner text-center mb--50">
                <h1 class="section-title">MATCH RESULTS</h1>
                {# <p>{{ match.results.description }}</p> #}
            </div>
            <div class="section-inner">
                <div class="table-area table-full">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                        </thead>
                        <tbody>
                            <tr class="head-tr">
                                <th scope="col">CLUB NAME</th>
                                <th scope="col">1ST HALF</th>
                                <th scope="col">2ND HALF</th>
                                <th scope="col">PTS</th>
                            </tr>
                            {# {% for team in match.teams %} #}
                                <tr>
                                    {# <td><span class="td name long-text">{{ team.name }}</span></td>
                                    <td class="compact-td"><span class="td">{{ team.firstHalf }}</span></td>
                                    <td class="compact-td"><span class="td">{{ team.secondHalf }}</span></td>
                                    <td class="compact-td"><span class="td pts-count">{{ team.points }}</span></td> #}
                                </tr>
                            {# {% endfor %} #}
                        </tbody>
                    </table>
                </div>

                <div class="player-activity-area">
                    <div class="row">
                        {# {% for team in match.teams %} #}
                            <div class="col-xl-6 col-md-6">
                                <div class="club-single">
                                    {# <h2 class="club-name">{{ team.name }}</h2> #}
                                    {# {% for player in team.players %} #}
                                        <div class="player-single">
                                            {# <span class="player-number">{{ player.number }}</span> #}
                                            <div class="d-block">
                                                {# <span class="player-name">{{ player.name }}</span>
                                                <span class="player-role">{{ player.role }}</span> #}
                                            </div>
                                            <div class="player-score">
                                                {# {% if player.goals > 0 %}
                                                    {% for i in 1..player.goals %}
                                                        <div class="icon mr--10">
                                                            <img src="{{ asset('assets/images/items/football.svg') }}" alt="football">
                                                        </div>
                                                    {% endfor %}
                                                {% endif %} #}
                                                {# {% if player.redCards > 0 %}
                                                    {% for i in 1..player.redCards %}
                                                        <div class="icon red">
                                                            <img src="{{ asset('assets/images/items/football-red.svg') }}" alt="football">
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                                {% if player.yellowCards > 0 %}
                                                    {% for i in 1..player.yellowCards %}
                                                        <span class="action-card ylw-card mr--10"></span>
                                                    {% endfor %}
                                                {% endif %}
                                                {% if player.assists > 0 %}
                                                    {% for i in 1..player.assists %}
                                                        <div class="icon">
                                                            <img src="{{ asset('assets/images/items/kick.svg') }}" alt="football">
                                                        </div>
                                                    {% endfor %}
                                                {% endif %} #}
                                            </div>
                                        </div>
                                    {# {% endfor %} #}
                                </div>
                            </div>
                        {# {% endfor %} #}
                    </div>
                    <div class="trainer-area">
                        <div class="trainer">
                            <div class="trainer-dp">
                                {# <img src="{{ asset(match.trainer.image) }}" alt="{{ match.trainer.name }}"> #}
                            </div>
                            <div class="block-wrapper">
                                {# <h3 class="trainer-name">{{ match.trainer.name }}</h3>
                                <span class="role">{{ match.trainer.role }}</span> #}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================= Result Section End Here =================-->

    <!--================= Trainer Section Start Here =================-->
    <div class="rts-trainer-section-section section-gap">
        <div class="container">
            <div class="section-title-area section-title-area-inner text-center mb--50">
                <h1 class="section-title">OFFICIAL TRAINERS</h1>
                {# <p>{{ match.officials.description }}</p> #}
            </div>
            <div class="table-area table-full">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                    </thead>
                    <tbody>
                        <tr class="head-tr">
                            <th scope="col">REFEREE</th>
                            <th scope="col">ASSISTANT REFEREE</th>
                            <th scope="col">TIMEKEEPERS</th>
                        </tr>
                        <tr>
                            {# <td><span class="text">{{ match.officials.referee }}</span></td>
                            <td><span class="text">{{ match.officials.assistantReferee }}</span></td>
                            <td><span class="long-text">{{ match.officials.timekeepers }}</span></td> #}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--================= Trainer Section End Here =================-->
{% endblock %}
{% block footer %}
 {{ parent() }}
{% endblock %}
{% block javascripts %}
 {{ parent() }}
{% endblock %}

