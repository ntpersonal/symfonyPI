{% extends 'front_office_dashboard/base.html.twig' %}
{% block title %}All Matches{% endblock %}
{% block banner %}
    <!--================= Banner Section Start Here =================-->
    <div class="banner banner1 position-relative">
        <div class="inner-page-banner banner-bg overlay-dark">
            <div class="container">
                <div class="banner-content text-center py-5">
                    <div class="page-path mb-3">
                        <ul class="list-inline mb-0">
                            <li class="list-inline-item"><a class="home-page-link text-white opacity-75 text-decoration-none" href="{{ path('app_home1') }}">Home</a></li>
                            <li class="list-inline-item text-white opacity-75">/</li>
                            <li class="list-inline-item"><a class="current-page text-white fw-bold" href="#">Matches</a></li>
                        </ul>
                    </div>
                    <h1 class="banner-heading text-uppercase text-white display-4 fw-bold mb-0">ALL MATCHES</h1>
                </div>
            </div>
        </div>
    </div>
    <!--================= Banner Section End Here =================-->
{% endblock %}
{% block content %}
  <div class="rts-matches-section section-gap py-5">
    <div class="container">

{# ----------------------------------------------------------------- #}
{#                            LOCAL MATCHES                         #}
{# ----------------------------------------------------------------- #}
<div class="section-title text-center mb-5">
  <h2 class="fw-bold pb-3 border-bottom border-3 border-primary">Local Matches</h2>
</div>
<div class="row g-4">
  {% for match in matches %}
    {% set home = match.teamA %}
    {% set away = match.teamB %}
    <div class="col-xl-3 col-md-6">
      <div class="match-card bg-white shadow-sm rounded-3 overflow-hidden h-100">
        <div class="match-teams text-center pt-4 px-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="team text-center" style="width:40%">
              <img src="{{ asset('assets/images/sportify.png') }}"
                   class="img-fluid rounded-circle mb-2" width="70"
                   alt="{{ home.nom }}">
              <h6 class="fw-bold text-truncate">{{ home.nom }}</h6>
            </div>
            <div class="vs-badge fw-bold fs-5">VS</div>
            <div class="team text-center" style="width:40%">
              <img src="{{ asset('assets/images/sportify.png') }}"
                   class="img-fluid rounded-circle mb-2" width="70"
                   alt="{{ away.nom }}">
              <h6 class="fw-bold text-truncate">{{ away.nom }}</h6>
            </div>
          </div>
        </div>
        <div class="match-details text-center p-3">
          <div class="match-date mb-2">
            <i class="far fa-calendar-alt me-2"></i>{{ match.matchTime|date('D, M d, Y') }}
          </div>
          <div class="match-time mb-3">
            <i class="far fa-clock me-2"></i>{{ match.matchTime|date('h:i A') }}
          </div>
          <div class="match-status mb-3">
            <span class="badge rounded-pill px-4 py-2
              bg-{{ match.status == 'FINISHED' ? 'success'
                     : match.status == 'UPCOMING' ? 'warning'
                     : match.status == 'LIVE'     ? 'danger'
                                                  : 'secondary' }}">
              {{ match.status|capitalize }}
            </span>
          </div>
          <a href="{{ path('app_front_match_show', { id: match.id }) }}"
             class="btn btn-outline-primary rounded-pill w-100">
            Details
          </a>
        </div>
      </div>
    </div>
  {% else %}
    <div class="col-12">
      <div class="alert alert-info text-center">
        No local matches found.
      </div>
    </div>
  {% endfor %}
</div>

      {# ----------------- API MATCHES ----------------- #}
<div class="section-title text-center mt-5 mb-4">
  <h2 class="fw-bold pb-3 border-bottom border-primary">Upcoming International Matches {{ season }}</h2>
</div>
<div class="row g-4">
  {% for m in apiMatches %}
    <div class="col-xl-3 col-md-6">
      <div class="match-card bg-white shadow-sm rounded-3 h-100">
        <div class="match-teams text-center pt-4 px-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="team text-center" style="width:40%">
              <img src="{{ m.team_home_badge ?: asset('assets/images/sportify.png') }}"
                   class="img-fluid rounded-circle mb-2" width="70"
                   alt="{{ m.match_hometeam_name }}">
              <h6 class="fw-bold text-truncate">{{ m.match_hometeam_name }}</h6>
            </div>
            <div class="vs-badge fw-bold fs-5">VS</div>
            <div class="team text-center" style="width:40%">
              <img src="{{ m.team_away_badge ?: asset('assets/images/sportify.png') }}"
                   class="img-fluid rounded-circle mb-2" width="70"
                   alt="{{ m.match_awayteam_name }}">
              <h6 class="fw-bold text-truncate">{{ m.match_awayteam_name }}</h6>
            </div>
          </div>
        </div>
        <div class="match-details text-center p-3">
          <div class="match-date mb-2">
            <i class="far fa-calendar-alt me-2"></i>{{ m.match_date }}
          </div>
          <div class="match-time mb-3">
            <i class="far fa-clock me-2"></i>{{ m.match_time }}
          </div>
          <a href="{{ path('app_front_api_match_show', { matchId: m.match_id }) }}"
             class="btn btn-outline-primary rounded-pill w-100">
            Details
          </a>
        </div>
      </div>
    </div>
  {% else %}
    <div class="col-12">
      <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>No API matches found.</h4>
      </div>
    </div>
  {% endfor %}
</div>
        
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ parent() }}
  
  <style>
    .hover-scale {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-scale:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }
    
    .transition-all {
      transition: all 0.3s ease;
    }
    
    .overlay-dark {
      position: relative;
    }
    
    .overlay-dark:before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      z-index: 0;
    }
    
    .overlay-dark .container {
      position: relative;
      z-index: 1;
    }
    
    .team-logo {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .team-logo img {
      max-width: 100%;
      max-height: 100%;
    }
    
    .team-name {
      font-size: 0.9rem;
      color: #333;
    }
    
    .vs-badge {
      color: #333;
    }
  </style>
{% endblock %}