        }

        .thumb-filter {
            width: 80px;
            height: 80px;
            border-radius: 4px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
        }

        .thumb-filter.active {
            border-color: #046bd2;
        }

        .thumb-filter img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-main-image {
            width: 100%;
            height: 400px;
            border-radius: 8px;
            overflow: hidden;
        }

        .product-main-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-info {
            padding: 2rem;
        }

        .product-category {
            color: #046bd2;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .product-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .product-price {
            font-size: 1.5rem;
            color: #046bd2;
            margin-bottom: 1rem;
        }

