{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Team filter functionality
            $('.team-filter button').click(function() {
                $('.team-filter button').removeClass('active');
                $(this).addClass('active');
                
                var filterValue = $(this).attr('data-filter');
                
                if(filterValue == 'all') {
                    $('.col-xl-3').show();
                } else {
                    $('.col-xl-3').hide();
                    $('.col-xl-3[data-category="' + filterValue + '"]').show();
                }
            });
        });
    </script>
