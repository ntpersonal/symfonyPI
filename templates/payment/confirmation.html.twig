{% extends 'Home/base.html.twig' %}

{% block title %}Payment Confirmation{% endblock %}

{% block body %}
<div class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card text-center">
                    <div class="card-body py-5">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                        </div>
                        <h2 class="card-title mb-3 text-dark">Payment Successful!</h2>
                        <p class="card-text text-dark">Your order has been placed successfully. We've sent a confirmation email with your order details.</p>
                        <p class="card-text text-dark">Thank you for shopping with us!</p>
                        <div class="mt-4">
                            <a href="{{ path('app_shop') }}" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
