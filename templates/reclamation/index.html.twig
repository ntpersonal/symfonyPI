{% extends 'admin_dashboard/dashboard.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .row-equal {
            display: flex;
            flex-wrap: wrap;
        }

        .reclamation-card {
            border-radius: 12px;
            border: none;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .reclamation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .card-header-custom {
            background: linear-gradient(45deg, #3498db, #2ecc71);
            color: white;
            border-radius: 12px 12px 0 0 !important;
            padding: 18px 20px;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .reclamation-message {
            height: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
            position: relative;
            margin-bottom: 20px;
        }

        .reclamation-message::after {
            content: "";
            position: absolute;
            bottom: 0;
            right: 0;
            left: 0;
            height: 30px;
            background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1));
        }

        .status-badge {
            font-size: 0.85rem;
            font-weight: 600;
            padding: 5px 12px;
            border-radius: 50px;
            display: inline-flex;
            align-items: center;
        }

        .status-badge i {
            margin-right: 5px;
        }

        .status-badge.pending {
            background-color: #f39c12;
            color: white;
        }

        .status-badge.resolved {
            background-color: #2ecc71;
            color: white;
        }

        .status-badge.processing {
            background-color: #3498db;
            color: white;
        }

        .actions-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 15px;
            margin-top: auto;
        }

        .action-btn {
            width: 100%;
            height: 46px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            white-space: nowrap;
            cursor: pointer;
            text-decoration: none;
        }

        .action-btn.reply {
            background-color: #3498db;
            color: white;
            box-shadow: 0 4px 0 #2980b9;
        }

        .action-btn.reply:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 6px 0 #2472a4;
        }

        .action-btn.reply:active {
            transform: translateY(2px);
            box-shadow: 0 2px 0 #2980b9;
        }

        .action-btn.delete {
            background-color: #e74c3c;
            color: white;
            box-shadow: 0 4px 0 #c0392b;
        }

        .action-btn.delete:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
            box-shadow: 0 6px 0 #a53125;
        }

        .action-btn.delete:active {
            transform: translateY(2px);
            box-shadow: 0 2px 0 #c0392b;
        }

        .action-btn i {
            margin-right: 8px;
            font-size: 1rem;
        }

        .filters-container {
            background: linear-gradient(45deg, #3498db, #2ecc71);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        }

        .filters-container h5 {
            color: white;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .filters-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 15px;
        }

        .filters-section {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 10px;
            flex: 1;
            min-width: 250px;
        }

        .filters-section-title {
            color: white;
            font-size: 0.95rem;
            margin-bottom: 10px;
            font-weight: 500;
            display: flex;
            align-items: center;
        }

        .filters-section-title i {
            margin-right: 8px;
        }

        .filter-btn {
            border-radius: 50px;
            padding: 8px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-right: 10px;
            margin-bottom: 10px;
            border: 2px solid transparent;
            display: inline-flex;
            align-items: center;
        }

        .filter-btn.active {
            background-color: white;
            color: #3498db;
            border: none;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .filter-btn:not(.active) {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid transparent;
        }

        .filter-btn:hover:not(.active) {
            background-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        .filter-btn i {
            margin-right: 5px;
        }

        .date-filter {
            background-color: white;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.9rem;
            border: none;
            width: 100%;
            max-width: 200px;
            margin-right: 10px;
        }

        .apply-filter-btn {
            background-color: white;
            color: #3498db;
            border: none;
            border-radius: 8px;
            padding: 10px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .apply-filter-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

        .stats-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(45deg, #9b59b6, #8e44ad);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            text-decoration: none;
            z-index: 1000;
        }

        .stats-btn:hover {
            transform: translateY(-5px) rotate(360deg);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        }

        .stats-btn i {
            font-size: 1.5rem;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #3498db;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 10px;
        }

        .create-btn {
            background: linear-gradient(45deg, #3498db, #2ecc71);
            border: none;
            border-radius: 50px;
            padding: 12px 30px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            display: inline-flex;
            align-items: center;
        }

        .create-btn i {
            margin-right: 8px;
        }

        .create-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .page-title {
            font-weight: 700;
            margin-bottom: 30px;
            color: #2c3e50;
            border-left: 5px solid #3498db;
            padding-left: 15px;
        }

        .meta-info {
            color: #7f8c8d;
            font-size: 0.9rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .meta-info i {
            margin-right: 5px;
        }

        .empty-state {
            text-align: center;
            padding: 50px 0;
        }

        .empty-state i {
            font-size: 5rem;
            color: #ecf0f1;
            margin-bottom: 20px;
        }

        .empty-state p {
            color: #95a5a6;
            font-size: 1.2rem;
        }

        .card-wrapper {
            margin-bottom: 30px;
            height: 100%;
        }

        @media (max-width: 768px) {
            .filters-row {
                flex-direction: column;
            }

            .filters-section {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="page-title">Liste des réclamations</h1>

    <div class="filters-container">
        <h5><i class="fas fa-filter"></i> Filtres avancés</h5>

        <div class="filters-row">
            <div class="filters-section">
                <div class="filters-section-title">
                    <i class="fas fa-tag"></i> Statut
                </div>
                <div>
                    <a href="{{ path('reclamation_index') }}" class="filter-btn {{ currentStatus is null ? 'active' : '' }}">
                        <i class="fas fa-list"></i> Toutes
                    </a>
                    {% for status, label in statusChoices %}
                        <a href="{{ path('reclamation_index', {'status': status}) }}"
                           class="filter-btn {{ currentStatus == status ? 'active' : '' }}">
                            {% if status == 'En attente' %}
                                <i class="fas fa-clock"></i>
                            {% elseif status == 'Résolu' %}
                                <i class="fas fa-check-circle"></i>
                            {% else %}
                                <i class="fas fa-sync"></i>
                            {% endif %}
                            {{ label }}
                        </a>
                    {% endfor %}
                </div>
            </div>

            <div class="filters-section">
                <div class="filters-section-title">
                    <i class="fas fa-calendar-alt"></i> Période
                </div>
                <form method="get" action="{{ path('reclamation_index') }}" class="d-flex align-items-center">
                    <input type="date" name="date_from" class="date-filter" value="{{ dateFrom }}" placeholder="Date de début">
                    <input type="date" name="date_to" class="date-filter" value="{{ dateTo }}" placeholder="Date de fin">
                    {% if currentStatus %}
                        <input type="hidden" name="status" value="{{ currentStatus }}">
                    {% endif %}
                    <button type="submit" class="apply-filter-btn">
                        <i class="fas fa-search"></i> Appliquer
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row row-equal">
        {% for reclamation in reclamations %}
            <div class="col-md-6 col-lg-4 card-wrapper">
                <div class="card reclamation-card">
                    <div class="card-header-custom">
                        <span>Réclamation #{{ reclamation.id }}</span>
                        <span class="status-badge {{ reclamation.status|lower|replace({' ': '-'}) }}">
                        {% if reclamation.status == 'En attente' %}
                            <i class="fas fa-clock"></i>
                        {% elseif reclamation.status == 'Résolu' %}
                            <i class="fas fa-check-circle"></i>
                        {% else %}
                            <i class="fas fa-sync"></i>
                        {% endif %}
                            {{ reclamation.status }}
                    </span>
                    </div>
                    <div class="card-body">
                        <div class="user-info">
                            <div class="user-avatar">
                                {{ reclamation.user.firstname|first|upper }}{{ reclamation.user.lastname|first|upper }}
                            </div>
                            <div>
                                <strong>{{ reclamation.user.firstname }} {{ reclamation.user.lastname }}</strong>
                            </div>
                        </div>

                        <div class="meta-info">
                            <i class="far fa-calendar-alt"></i> {{ reclamation.createdAt|date('d/m/Y à H:i') }}
                        </div>

                        <div class="reclamation-message">
                            {{ reclamation.message|nl2br }}
                        </div>

                        <div class="actions-container">
                            <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="action-btn reply">
                                <i class="fas fa-reply"></i> Répondre
                            </a>

                            <form method="post" action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');" style="display: contents;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="action-btn delete">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="empty-state">
                    <i class="far fa-comment-dots"></i>
                    <p>Aucune réclamation trouvée.</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('reclamation_stats') }}" class="stats-btn" title="Statistiques des réclamations">
        <i class="fas fa-chart-pie"></i>
    </a>
{% endblock %}
