{% extends 'front_office_dashboard/base.html.twig' %}

{% block title %}My Reclamations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block banner %}
<!--================= Banner Section Start Here =================-->
<div class="banner banner1">
    <div class="inner-page-banner banner-bg">
        <div class="container">
            <div class="banner-content">
                <div class="page-path">
                    <ul>
                        <li><a class="home-page-link" href="{{ path('app_home') }}">Home</a></li>
                        <li><a class="current-page" href="#">My Reclamations</a></li>
                    </ul>
                </div>
                <h1 class="banner-heading">My Reclamations</h1>
            </div>
        </div>
    </div>
</div>
<!--================= Banner Section End Here =================-->
{% endblock %}

{% block content %}
<!--contact-area start-->
<div class="contact-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <h3 class="post-title mb-35">Your Submitted Reclamations</h3>
                {% if reclamations is empty %}
                    <div class="alert alert-info text-center">
                        You havenâ€™t submitted any reclamations yet.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Message</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ reclamation.message|u.truncate(50, '...') }}</td>
                                        <td>{{ reclamation.createdAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            <a href="{{ path('reclamation_show2', {id: reclamation.id}) }}" class="btn btn-sm btn-outline-primary">Details</a>
                                        </td>
                                      
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<!--contact-area end-->
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
