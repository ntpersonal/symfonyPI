{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent - Soccer{% endblock %}

{% block body %}
    <div class="hero overlay d-flex align-items-center" style="background-image: url('{{ asset('assets/images/bg_3.jpg') }}'); min-height: calc(100vh - 120px); padding-top: 300px; padding-bottom: 110px;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7 col-12">
                    <div class="card modern-card border-0 rounded-4 shadow-lg p-4 mb-4" style="max-width: 450px; margin: 0 auto;">
                        <div class="card-header bg-transparent text-center py-3 border-0">
                            <h3 class="font-weight-bold text-primary mb-1">Check Your Email</h3>
                            <p class="mb-0 text-secondary">Reset link has been sent</p>
                        </div>
                        <div class="card-body p-4 text-center">
                            <div class="email-icon-wrapper mb-4">
                                <i class="fa fa-envelope-open-text fa-3x text-primary mb-3"></i>
                                <div class="email-pulse"></div>
                            </div>

                            <div class="message-box p-3 mb-4">
                                <p class="mb-3 text-dark">
                                    If an account matching your email exists, we've sent you instructions to reset your password.
                                </p>

                                <div class="expiration-box p-3 mb-3">
                                    <p class="mb-0">
                                        <span class="text-secondary">The reset link will expire in:</span><br>
                                        <span class="expiration-time">{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</span>
                                    </p>
                                </div>
                            </div>

                            <div class="alert alert-warning border-0 rounded-pill py-3 px-4 d-inline-block">
                                <i class="fa fa-info-circle me-2"></i>
                                Check your spam folder if you don't see the email
                            </div>
                        </div>
                        <div class="card-footer bg-transparent text-center border-0 pt-0 pb-3">
                            <div class="d-flex justify-content-center gap-3">
                                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-primary btn-action">
                                    <i class="fa fa-arrow-left me-2"></i> Try again
                                </a>
                                <a href="{{ path('app_log_in') }}" class="btn btn-outline-primary btn-action">
                                    Back to login <i class="fa fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .modern-card {
            background: #ffffff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 1rem;
            position: relative;
            z-index: 10;
            overflow: hidden;
        }
        
        .modern-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #e41b23 0%, #fd7e14 100%);
        }
        
        .text-primary {
            color: #e41b23 !important;
        }
        
        .text-secondary {
            color: #6c757d !important;
        }
        
        .btn-action {
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .btn-primary {
            background: linear-gradient(90deg, #e41b23 0%, #fd7e14 100%);
            border: none;
            color: white;
            box-shadow: 0 4px 15px rgba(228, 27, 35, 0.2);
        }
        
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(228, 27, 35, 0.3);
            color: white;
        }
        
        .btn-primary::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #fd7e14 0%, #e41b23 100%);
            opacity: 0;
            z-index: -1;
            transition: opacity 0.3s ease;
        }
        
        .btn-primary:hover::after {
            opacity: 1;
        }
        
        .btn-outline-primary {
            color: #e41b23;
            border: 2px solid #e41b23;
            background: transparent;
        }
        
        .btn-outline-primary:hover {
            background-color: #e41b23;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(228, 27, 35, 0.2);
        }
        
        .email-icon-wrapper {
            position: relative;
            display: inline-block;
        }
        
        .email-pulse {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: rgba(228, 27, 35, 0.1);
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% {
                transform: translate(-50%, -50%) scale(0.8);
                opacity: 0.8;
            }
            70% {
                transform: translate(-50%, -50%) scale(1.2);
                opacity: 0.3;
            }
            100% {
                transform: translate(-50%, -50%) scale(0.8);
                opacity: 0.8;
            }
        }
        
        .message-box {
            background-color: #f8f9fc;
            border-radius: 0.75rem;
        }
        
        .expiration-box {
            background-color: #fff5f5;
            border-radius: 0.5rem;
            border-left: 4px solid #e41b23;
        }
        
        .expiration-time {
            font-size: 1.25rem;
            font-weight: 700;
            color: #e41b23;
        }
        
        .alert-warning {
            background-color: rgba(228, 27, 35, 0.1);
            color: #e41b23;
        }
        
        .gap-3 {
            gap: 1rem !important;
        }
        
        /* Fix for footer */
        .footer-section {
            position: relative;
            z-index: 5;
        }
    </style>
{% endblock %}