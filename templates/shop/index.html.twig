{% extends 'Home/base.html.twig' %}

{# Add Bootstrap Icons #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Improve text visibility */
        .form-label, .card-title, .card-text {
            font-weight: 500;
            color: #333;
        }
        /* Make product cards stand out more */
        .card {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        
        /* Simple dropdown styling for better visibility */
        .custom-select {
            position: relative;
            display: inline-block;
            width: 100%;
            margin-bottom: 10px;
        }
        
        .custom-select select {
            padding: 12px 15px;
            border: 2px solid #000;
            background-color: #fff;
            font-weight: bold;
            color: #000;
            font-size: 16px;
        }
        
        /* Make dropdown options more visible */
        .custom-select select option {
            padding: 10px;
            font-weight: bold;
            color: #000;
            background-color: #fff;
        }
    </style>
{% endblock %}

{% block title %}Shop{% endblock %}

{% block body %}
<div class="hero overlay" style="background-image: url('{{ asset('assets/images/bg_3.jpg') }}');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mx-auto text-center">
                <h1 class="text-white">Shop</h1>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="widget-next-match">
                    <div class="widget-body mb-3">
                        <div class="widget-vs">
                            <h3>Welcome to Our Shop</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">

    <!-- Search and Filter Form -->
    <div class="mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0 fw-bold"><i class="bi bi-search me-2"></i>Search Products</h4>
            </div>
            <div class="card-body">
                <!-- Text Search Form -->
                <form method="get" action="{{ path('app_shop') }}" class="mb-4">
                    <h5 class="mb-3 fw-bold"><i class="bi bi-text-paragraph me-2"></i>Search by Product Details</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="product_search" class="form-label fw-bold">Product Name</label>
                            <input type="text" id="product_search" name="search" class="form-control form-control-lg" placeholder="Search products..." value="{{ searchTerm }}">
                        </div>
                        <div class="col-md-3">
                            <label for="category_search" class="form-label fw-bold">Category</label>
                            <div class="custom-select">
                                <select id="category_search" name="category" class="form-control form-control-lg">
                                    <option value="">All Categories</option>
                                    <option value="tournement" {% if selectedCategory == 'tournement' %}selected{% endif %}>Tournement</option>
                                    <option value="clothes" {% if selectedCategory == 'clothes' %}selected{% endif %}>Clothes</option>
                                    <option value="trophies" {% if selectedCategory == 'trophies' %}selected{% endif %}>Trophies</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="stock_search" class="form-label fw-bold">Stock Status</label>
                            <div class="custom-select">
                                <select id="stock_search" name="stock" class="form-control form-control-lg">
                                    <option value="">All Stock Status</option>
                                    <option value="yes" {% if selectedStock == 'yes' %}selected{% endif %}>In Stock</option>
                                    <option value="coming" {% if selectedStock == 'coming' %}selected{% endif %}>Coming Soon</option>
                                    <option value="no" {% if selectedStock == 'no' %}selected{% endif %}>Out of Stock</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label d-block">&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-lg w-100"><i class="bi bi-search me-2"></i>Search</button>
                        </div>
                    </div>
                </form>
                
                <!-- Divider -->
                <div class="text-center mb-4">
                    <span class="badge bg-secondary px-4">OR</span>
                    <hr class="mt-n2">
                </div>
                
                <!-- Image Search Form -->
                <form method="post" action="{{ path('app_shop_image_search') }}" enctype="multipart/form-data">
                    <h6 class="mb-3 fw-bold fs-5">Search by Image</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="image_search" class="form-label fw-bold">Upload an image to find similar products</label>
                                <input type="file" class="form-control" id="image_search" name="image_search" accept="image/*" required>
                                <div class="form-text fw-bold">Supported formats: JPG, PNG, GIF</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="category_image" class="form-label">Category (Optional)</label>
                            <div class="custom-select">
                                <select name="category" id="category_image" class="form-control form-control-lg">
                                    <option value="">All Categories</option>
                                    <option value="tournement" {% if selectedCategory == 'tournement' %}selected{% endif %}>Tournement</option>
                                    <option value="clothes" {% if selectedCategory == 'clothes' %}selected{% endif %}>Clothes</option>
                                    <option value="trophies" {% if selectedCategory == 'trophies' %}selected{% endif %}>Trophies</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="stock_image" class="form-label">Stock Status (Optional)</label>
                            <div class="custom-select">
                                <select name="stock" id="stock_image" class="form-control form-control-lg">
                                    <option value="">All Stock Status</option>
                                    <option value="yes" {% if selectedStock == 'yes' %}selected{% endif %}>In Stock</option>
                                    <option value="coming" {% if selectedStock == 'coming' %}selected{% endif %}>Coming Soon</option>
                                    <option value="no" {% if selectedStock == 'no' %}selected{% endif %}>Out of Stock</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-lg">Search by Image</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success fw-bold fs-5">
            <i class="bi bi-check-circle-fill me-2"></i> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger fw-bold fs-5">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning fw-bold fs-5">
            <i class="bi bi-exclamation-circle-fill me-2"></i> {{ message }}
        </div>
    {% endfor %}

    <!-- Cart Button and Show All Products Button (if in image search) -->
    <div class="d-flex justify-content-between mb-3">
        {% if imageSearch is defined and imageSearch %}
            <a href="{{ path('app_shop') }}" class="btn btn-success btn-lg">
                <i class="bi bi-grid"></i> Show All Products
            </a>
        {% else %}
            <div></div> <!-- Empty div for flex spacing when not in image search -->
        {% endif %}
        <a href="{{ path('app_shop_cart') }}" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-cart"></i> Cart <span class="badge bg-primary">{{ cartCount }}</span>
        </a>
    </div>

    <!-- Products Grid -->
    {% if imageSearch is defined and imageSearch %}
        <div class="alert alert-info mb-4">
            <h4 class="alert-heading"><i class="bi bi-image me-2"></i> Image Search Results</h4>
            <p class="mb-0">Showing products that match your uploaded image. <a href="{{ path('app_shop') }}" class="alert-link">Click here</a> to see all products.</p>
        </div>
    {% endif %}
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    {% if product.image %}
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.nameproduct }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <img src="https://placehold.co/400x300" class="card-img-top" alt="Default Image" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nameproduct }}</h5>
                        <p class="card-text">
                            Price: ${{ product.priceproduct }}<br>
                            Category: {{ product.category }}<br>
                            Status: {% if product.stock == 'yes' %}
                                <span class="text-success">In Stock</span>
                            {% else %}
                                <span class="text-danger">Out of Stock</span>
                            {% endif %}
                        </p>
                        <div class="d-flex gap-2 mb-3">
                            <a href="{{ path('app_product_details', {'id': product.id}) }}" class="btn btn-info flex-grow-1">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                        {% if product.stock == 'yes' %}
                            <form action="{{ path('cart_add', {'id': product.id}) }}" method="post" class="d-flex gap-2">
                                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 80px;">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        {% else %}
                            <button class="btn btn-secondary" disabled>Out of Stock</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">No products found.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
